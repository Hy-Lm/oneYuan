page {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  opacity: 1;
  background: #f9f7f7;
  padding: 22px 15px;
  padding-bottom: 0;
}
.address-btn {
  padding: 5px 7px;
  padding-left: 0;
  height: 20px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.address-btn-r {
  width: 6px;
  height: 11px;
}
.address-btn-r image {
  width: 100%;
  height: 100%;
}
.address-btn-l {
  opacity: 1;
  font-size: 14px;
  color: #f0923c;
}
.address {
  padding: 0 28px;
  padding-bottom: 14px;
  background: #FFFFFF;
}
.address .address-items-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 15px 0;
  border-bottom: 1px solid #EDEDED;
}
.address .address-items-item .address-items-item-l > view:nth-child(1) {
  opacity: 1;
  font-size: 14px;
  color: #000000;
  margin-bottom: 2px;
}
.address .address-items-item .address-items-item-l > view:nth-child(2) {
  opacity: 1;
  font-size: 12px;
  color: #000000;
}
.address .address-items-item .address-items-item-l > view:nth-child(3) {
  opacity: 1;
  font-size: 12px;
  color: #707070;
}
.address .address-items-item .address-items-item-l .item-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.address .address-items-item .address-items-item-l .item-info > view:nth-child(1) {
  margin-right: 7px;
}
.address .address-items-item-r {
  width: 17px;
  height: 17px;
}
.address .address-items-item-r image {
  width: 100%;
  height: 100%;
}

