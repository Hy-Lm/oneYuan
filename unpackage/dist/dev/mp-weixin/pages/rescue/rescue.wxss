.rescue {
  position: relative;
  width: 100%;
}
.rescue .rescue-con {
  position: fixed;
  bottom: 5%;
  left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
  width: 90%;
  height: 239px;
  opacity: 1;
  background: #ffffff;
  border-radius: 6px;
  padding: 12px 13px;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.rescue .rescue-con .rescue-yu {
  height: 17px;
  opacity: 1;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #2c2c2c;
}
.rescue .rescue-con .diwei > view:nth-child(2) > text {
  background: #ff3b30;
}
.rescue .rescue-con .diwei > view {
  padding: 0 18px;
  border-top: 1px solid rgba(112, 112, 112, 0.1);
  height: 34px;
  line-height: 34px;
  font-size: 12px;
  text-align: left;
  color: #707070;
  letter-spacing: 0px;
}
