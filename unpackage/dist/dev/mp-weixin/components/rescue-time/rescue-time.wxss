.select-date {
  position: fixed;
  bottom: 0;
  left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
  width: 100%;
  height: 296px;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.select-date .select-day {
  width: 100%;
  height: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  opacity: 1;
  background: #f9f7f7;
}
.select-date .select-day .day {
  height: 44px;
  line-height: 44px;
  text-align: center;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0px;
}
.select-date .select-day .day.active {
  background-color: #fff;
}
.select-date .select-time {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  height: 100%;
  background-color: #fff;
  overflow-y: auto;
}
.select-date .select-time .time {
  padding-left: 27px;
  border-bottom: 2px solid #eee;
  height: 44px;
  line-height: 44px;
  opacity: 1;
  font-size: 14px;
  text-align: left;
  color: #000000;
  letter-spacing: 0px;
}
.select-date .select-time .time.select {
  color: #f0923c;
}
.select-date .select-time .time ._i {
  float: right;
  font-size: 30px;
  color: #ff4a00;
  margin-top: 26px;
}
