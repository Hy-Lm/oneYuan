page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  background-color: #F9F7F7;
}
.serve_content {
  padding: 0 20px;
  box-sizing: border-box;
  width: 100%;
}
.serve_content .serve_con {
  height: 285px;
  padding: 13px 10px 19px 10px;
  background: #ffffff;
  border-radius: 10px 10px 0px 0px;
  box-shadow: 0px 0px 7px 0px rgba(0, 0, 0, 0.16);
}
.header {
  width: 100%;
  height: 25px;
  padding: 7px 0 15px 0;
}
.header text:nth-child(1) {
  font-size: 18px;
  font-weight: bold;
  color: #000000;
}
.header text:nth-child(2) {
  margin-left: 10px;
  font-size: 12px;
  color: #7d7d7d;
}
.header view:nth-child(3) {
  float: right;
  width: 35px;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  color: #000000;
}
.header view:nth-child(3) image {
  width: 5px;
  height: 10px;
  opacity: 1;
  margin-left: 5px;
}
.type {
  width: 100%;
  overflow: hidden;
  margin-bottom: 10px;
}
.type .left {
  float: left;
  width: 71px;
  height: 71px;
  margin-right: 10px;
}
.type .left image {
  width: 100%;
  height: 100%;
}
.type .right {
  float: right;
  text-align: left;
  width: calc(100% - 81px);
  height: 71px;
}
.type .right view:nth-child(1) {
  height: 22px;
  opacity: 1;
  font-size: 16px;
  text-align: left;
  color: #000000;
}
.type .right view:nth-child(2) {
  padding: 5px 0 4px 0;
  height: 17px;
  opacity: 1;
  font-size: 12px;
  text-align: left;
  color: #000000;
}
.type .right view:nth-child(2) text {
  margin-right: 12px;
}
.type .right view:nth-child(3) {
  height: 17px;
  opacity: 1;
  font-size: 12px;
  text-align: left;
  color: #000000;
}
.type .right view:nth-child(3) .km {
  float: right;
}

