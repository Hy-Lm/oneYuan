.box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.box .left {
  float: left;
  width: 100px;
  height: 100%;
  background-color: #f1f1f1;
  overflow: hidden;
  box-sizing: border-box;
}
.box .left ._ul {
  list-style: none;
  padding: 0;
}
.box .left ._ul ._li {
  padding-left: 30px;
  display: block;
  width: 100%;
  height: 35px;
  font-size: 12px;
  text-align: left;
  line-height: 35px;
}
.box .left ._ul .active {
  color: #396A3A;
  position: relative;
  background-color: #FFFFFF;
}
.box .left ._ul .active::before {
  content: '';
  position: absolute;
  left: 25px;
  top: 10px;
  width: 2px;
  height: 14px;
  background-color: #396A3A;
}
.box .right {
  height: 100%;
  overflow: hidden;
  padding: 0 30px;
  padding-left: 30px;
}
.box .right .item {
  overflow: hidden;
}
.box .right .item .title {
  height: 35px;
  font-size: 12px;
  text-align: left;
  line-height: 35px;
}
.box .right .item ._ul {
  list-style: none;
  padding: 0;
}
.box .right .item ._ul ._li {
  float: left;
  width: 33%;
  overflow: hidden;
  text-align: left;
  padding-bottom: 10px;
}
.box .right .item ._ul ._li image {
  width: 57px;
  height: 57px;
}
.box .right .item ._ul ._li view {
  width: 100%;
  height: 17px;
  opacity: 1;
  font-size: 12px;
  color: #000000;
}

