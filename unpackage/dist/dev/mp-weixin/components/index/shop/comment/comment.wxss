.comment {
  height: 376px;
  background: #ffffff;
  border-radius: 10px 10px 0px 0px;
  box-shadow: 2px 1px 6px 0px rgba(0, 0, 0, 0.23);
}
.comment .comment_header {
  padding: 20px 15px;
}
.comment .comment_header image {
  float: right;
  width: 7px;
  height: 14px;
}
.comment .start {
  padding-left: 35px;
}
.comment .start .service {
  overflow: hidden;
}
.comment .start .service text {
  float: left;
  height: 20px;
  font-size: 14px;
  color: #000000;
}
.comment .start .service view {
  float: left;
  margin-left: 28px;
}
.comment .start .service view image {
  width: 14px;
  height: 14px;
  padding: 0 3px;
}
.comment ._hr {
  margin-top: 10px;
  height: 1px;
  opacity: 0.3;
  background-color: #707070;
  border: none;
}
.comment .pinglun .toux {
  padding: 20px 30px 0 15px;
  overflow: hidden;
}
.comment .pinglun .toux image {
  float: left;
  width: 41px;
  height: 41px;
}
.comment .pinglun .toux .yonghu {
  height: 40px;
  margin-left: 15px;
  float: left;
  font-size: 12px;
  line-height: 20px;
}
.comment .pinglun .toux .yonghu view:nth-child(1) {
  height: 20px;
  color: #000000;
}
.comment .pinglun .toux .yonghu view:nth-child(2) {
  height: 20px;
  color: #515151;
}
.comment .pinglun .pinglun_con {
  padding: 13px 30px 0 25px;
  font-size: 12px;
  color: #000000;
}

