page {
  background-color: #F1F1F1;
}
.left {
  float: left;
}
.right {
  float: right;
}
.bg {
  background-color: #FFFFFF;
  width: 100%;
  height: 96px;
  text-align: center;
}
.bg image {
  padding: 6px 0;
  width: 50px;
  height: 50px;
}
.bg view {
  width: 100%;
  height: 25px;
  font-size: 18px;
  color: #0d8600;
}
.type {
  width: 100%;
  padding: 10px 15px;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #FFFFFF;
  margin: 10px 0;
}
.type .left {
  float: left;
  width: 71px;
  height: 71px;
  margin-right: 10px;
}
.type .left image {
  width: 100%;
  height: 100%;
}
.type .right {
  float: right;
  text-align: left;
  width: calc(100% - 81px);
  height: 71px;
}
.type .right view:nth-child(1) {
  height: 24px;
  line-height: 22px;
  opacity: 1;
  font-size: 18px;
  text-align: left;
  color: #000000;
}
.type .right view:nth-child(2) {
  padding: 5px 0 4px 0;
  height: 17px;
  opacity: 1;
  font-size: 14px;
  text-align: left;
  color: #000000;
}
.type .right view:nth-child(2) text {
  margin-right: 12px;
}
.type .right view:nth-child(3) {
  height: 17px;
  opacity: 1;
  font-size: 14px;
  text-align: left;
  color: #000000;
}
.type .right view:nth-child(3) .km {
  float: right;
}
.detail_xq {
  padding: 0 15px;
  background-color: #FFFFFF;
}
.detail_xq .detail_xq_h {
  padding: 15px 0;
}
.detail_xq .detail_xq_h text:nth-child(1),
.detail_xq .detail_xq_h text:nth-child(2) {
  height: 23px;
  line-height: 23px;
  padding: 2px 8px;
  color: #FFFFFF;
  font-size: 14px;
  background: #0d8600;
  border-radius: 7px;
}
.detail_xq .detail_xq_h text:nth-child(1) {
  margin-right: 10px;
}
.detail_xq .detail_xq_h text:nth-child(3) {
  float: right;
  height: 23px;
  line-height: 23px;
  font-size: 14px;
  color: #000000;
}
.detail_xq .price .yuanjia, .detail_xq .price .youhui, .detail_xq .price .shifuk {
  overflow: hidden;
  padding: 7px 0;
  height: 20px;
  font-size: 14px;
  color: #000000;
}
.detail_xq .price .shifuk text:nth-child(2) {
  font-size: 16px;
  color: #cd2727;
}
.footer {
  margin: 0 32px;
  margin-top: 30px;
  font-size: 18px;
  height: 34px;
  line-height: 34px;
  color: #FFFFFF;
  opacity: 1;
  background: #0d8600;
  border-radius: 17px;
  text-align: center;
}

