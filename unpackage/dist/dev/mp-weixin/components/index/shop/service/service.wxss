.left {
  float: left;
}
.right {
  float: right;
}
.service {
  width: 100%;
  padding: 0 15px;
  box-sizing: border-box;
}
.service .shopname {
  height: 20px;
  font-size: 14px;
  color: #000000;
}
.service .type {
  height: 25px;
  font-size: 18px;
  font-weight: bold;
  color: #000000;
}
.service .server {
  height: 17px;
  font-size: 12px;
  color: #000000;
}
.service .server text:nth-child(2) {
  margin-left: 15px;
  border-left: 1px solid #999999;
  padding-left: 5px;
}
.service .img1 {
  padding: 15px 0;
  width: 100%;
  height: 167px;
}
.service .price .yuanjia, .service .price .youhui, .service .price .shifuk {
  overflow: hidden;
  padding: 7px 0;
  height: 20px;
  font-size: 14px;
  color: #000000;
}
.service .price .shifuk text:nth-child(2) {
  font-size: 16px;
  color: #cd2727;
}
.service .price .bg {
  width: 100%;
  height: 1px;
  border-bottom: 1px solid #707070;
  opacity: 0.43;
}
.particulars {
  width: 100%;
  padding: 0 25px;
  box-sizing: border-box;
  text-align: center;
}
.particulars view {
  padding: 12px 0;
  height: 20px;
  font-size: 14px;
  color: #000000;
  position: relative;
}
.particulars view::after {
  content: '';
  width: 38px;
  height: 1px;
  position: absolute;
  left: calc(100%/2 - 80px);
  top: 20px;
  opacity: 0.5;
  background-color: #000000;
}
.particulars view::before {
  content: '';
  width: 38px;
  height: 1px;
  position: absolute;
  right: calc(100%/2 - 80px);
  top: 20px;
  opacity: 0.5;
  background-color: #000000;
}
.particulars image {
  width: 100%;
  height: 250px;
}
.footer {
  width: 100%;
  height: 80px;
  padding: 18px 25px;
  box-sizing: border-box;
  text-align: center;
  overflow: hidden;
}
.footer .footer_box {
  position: relative;
}
.footer .footer_box view:nth-child(1) {
  position: absolute;
}
.footer .footer_box view:nth-child(1) image {
  width: 21px;
  height: 26px;
}
.footer .footer_box view:nth-child(1) text {
  display: block;
  width: 24px;
  height: 17px;
  font-size: 12px;
  color: #000000;
}
.footer .footer_box view:nth-child(3) {
  position: absolute;
  right: 0;
  top: 0px;
  width: 90px;
  font-size: 18px;
  height: 25px;
  line-height: 25px;
  color: #FFFFFF;
  background: #f0923c;
  border-radius: 25px;
  padding: 10px 20px;
}
.footer .footer_box view:nth-child(2) {
  width: 100%;
  box-sizing: border-box;
  padding: 0 90px  0 25px;
  line-height: 44px;
  text-align: center;
  font-size: 16px;
  color: #cd2727;
}
.footer .footer_box view:nth-child(2) text {
  font-size: 22px;
}

