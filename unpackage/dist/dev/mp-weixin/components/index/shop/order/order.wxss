.calendar {
  height: 50px;
  width: 100%;
  background-color: red;
}
.order {
  padding: 0 30px;
  overflow: hidden;
}
.order .type {
  width: 100%;
  overflow: hidden;
  padding: 18px 0 12px 0;
}
.order .type .left {
  float: left;
  width: 71px;
  height: 71px;
  margin-right: 10px;
}
.order .type .left image {
  width: 100%;
  height: 100%;
}
.order .type .right {
  float: right;
  text-align: left;
  width: calc(100% - 81px);
  height: 71px;
}
.order .type .right view:nth-child(1) {
  height: 22px;
  opacity: 1;
  font-size: 16px;
  text-align: left;
  color: #000000;
}
.order .type .right view:nth-child(2) {
  padding: 5px 0 4px 0;
  height: 17px;
  opacity: 1;
  font-size: 12px;
  text-align: left;
  color: #000000;
}
.order .type .right view:nth-child(2) text {
  margin-right: 12px;
}
.order .type .right view:nth-child(3) {
  height: 17px;
  opacity: 1;
  font-size: 12px;
  text-align: left;
  color: #000000;
}
.order .type .right view:nth-child(3) .km {
  float: right;
}
.order .type .zhichi {
  clear: both;
  padding: 8px 0;
  height: 17px;
  font-size: 12px;
  color: #000000;
}
.order .book {
  padding: 0;
  list-style: none;
  margin-bottom: 20px;
}
.order .book ._li:last-child {
  border-bottom: none;
}
.order .book .book_time {
  border-bottom: 1px solid #ccc;
  padding: 15px 0;
}
.order .book .book_time .time {
  float: left;
  width: 90px;
  height: 22px;
  font-size: 16px;
  color: #000000;
}
.order .book .book_time .price {
  margin-left: 60px;
  height: 22px;
  font-size: 16px;
  color: #7d7d7d;
  opacity: 0.8;
}
.order .book .book_time .state {
  float: right;
  text-align: center;
  width: 43px;
  height: 26px;
  line-height: 26px;
  color: #FFFFFF;
  background: #7d7d7d;
  border-radius: 6px;
}
.order .book .active .price {
  color: #CD2727;
}
.order .book .active .state {
  background: #CD2727;
}

