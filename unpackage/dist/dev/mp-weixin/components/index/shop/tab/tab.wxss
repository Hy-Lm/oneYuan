page {
  box-sizing: border-box;
}
._li {
  list-style-type: none;
}
._ul {
  padding: 0;
}
.tab {
  width: 100%;
  margin-top: 10px;
}
.tab_list {
  height: 39px;
  background: #f9f7f7;
}
.tab_list ._li {
  float: left;
  width: 20%;
  height: 39px;
  line-height: 39px;
  text-align: center;
  position: relative;
}
.tab_list .current::after {
  content: '';
  position: absolute;
  left: calc(100% / 2 - 10px);
  bottom: 0;
  width: 12px;
  height: 2px;
  opacity: 1;
  background: #0d8600;
  border: 1px solid #0d8600;
}
.tab_con {
  padding: 18px 15px;
}
.item {
  display: none;
  padding: 0 20px;
  border-radius: 10px;
  box-shadow: 2px 1px 6px 0px rgba(0, 0, 0, 0.23);
  overflow: hidden;
}
.item .item_box {
  overflow: hidden;
  padding: 10px 0;
}
.item .item_box .img1 {
  float: left;
  width: 57px;
  height: 57px;
  border-radius: 3px;
}
.item .item_box .img2 {
  float: right;
  width: 7px;
  height: 14px;
  margin-top: calc(57px / 2 - 7px);
}
.item .item_box .con {
  float: left;
  margin-left: 18px;
}
.item .item_box .con view {
  height: 20px;
  font-size: 14px;
  color: #000000;
}
.item .item_box .con view text:nth-child(1) {
  color: #cd2727;
  font-weight: bold;
}
.item .item_box .con view:nth-child(1) {
  margin-bottom: 20px;
}

