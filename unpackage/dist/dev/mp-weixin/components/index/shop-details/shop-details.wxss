.shop-details-box {
  position: relative;
}
.shop-header image {
  width: 100%;
  height: 251px;
}
.shop-header .xiangqing {
  padding: 0 30px;
}
.shop-header .xiangqing .title {
  width: 80%;
  display: inline-block;
  font-size: 16px;
  color: #000000;
  padding: 10px 0 5px 0;
}
.shop-header .xiangqing .collect {
  width: 20%;
  display: inline-block;
  text-align: right;
  font-size: 16px;
  color: #7d7d7d;
}
.shop-header .xiangqing .price {
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  font-weight: bold;
  color: #cd2727;
}
.shop-header .xiangqing .con {
  height: 20px;
  font-size: 14px;
  color: #7d7d7d;
}
.shop-header .xiangqing .con text:nth-child(2) {
  float: right;
  padding-right: 20px;
}
.shop-header .delivery {
  height: 42px;
  margin: 10px 0 0 0;
  padding-left: 30px;
  width: 100%;
  line-height: 42px;
  background: #ffffff;
  box-shadow: 0px 0px 3px 0px rgba(0, 0, 0, 0.16);
  font-size: 14px;
  color: #7d7d7d;
}
.shop-xq {
  background: #f1f1f1;
}
.shop-xq .spxq {
  padding: 20px 0 5px 30px;
  height: 20px;
  font-size: 14px;
  color: #000000;
}
.shop-xq image {
  width: 100%;
  height: 266px;
}
.footer {
  position: absolute;
  box-sizing: border-box;
  bottom: 0;
  background-color: #FFFFFF;
  padding: 25px 30px 30px 30px;
  width: 100%;
}
.footer .footer_left {
  float: left;
}
.footer .footer_left image {
  width: 16px;
  height: 16px;
  margin-right: 7px;
  background-color: #515151;
}
.footer .footer_left text {
  height: 22px;
  font-size: 16px;
  color: #515151;
}
.footer .footer_right {
  float: right;
}
.footer .footer_right text {
  height: 28px;
  font-size: 16px;
  padding: 3px 11px;
}
.footer .footer_right text:nth-child(1) {
  border-radius: 14px 0px 0px 14px;
  background: #707070;
  color: #fff0c9;
}
.footer .footer_right text:nth-child(2) {
  border-radius: 0px 14px 14px 0px;
  background: #cd2727;
  color: #ffffff;
}

